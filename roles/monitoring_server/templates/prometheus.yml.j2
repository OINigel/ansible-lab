global:
  scrape_interval: 15s
  evaluation_interval: 15s

scrape_configs:
  # Scrape Prometheus itself (on rocky-monitor)
  - job_name: 'prometheus'
    static_configs:
      - targets:
          - 'localhost:9090'

# Scrape node_exporter on all cluster nodes
  - job_name: 'node_exporter'
    static_configs:
      - targets:
{% set node_groups =
     (groups['compute'] | default([]))
   + (groups['slurm_controller'] | default([]))
   + (groups['slurm_backup_controller'] | default([]))
   + (groups['monitor'] | default([])) %}
{% for host in node_groups %}
          - '{{ host }}:9100'
{% endfor %}
