global:
  scrape_interval: 15s
  evaluation_interval: 15s

scrape_configs:
  # Scrape Prometheus itself (on rocky-monitor)
  - job_name: 'prometheus'
    static_configs:
      - targets:
          - 'localhost:9090'

  # Scrape node exporter on mgmt + compute nodes
  - job_name: 'node_exporter'
    static_configs:
      - targets:
{% for host in (groups['mgmt'] + groups['compute']) %}
{%   set target_ip = hostvars[host].ansible_host | default(host) %}
          - '{{ target_ip }}:9100'
{% endfor %}
